---
import Layout from "../layouts/Layout.astro"
import hoverSvg from "../assets/hover.svg"
---

<Layout>
  <div
    class="min-h-screen bg-black flex items-center justify-start relative overflow-hidden"
  >
    <div class="absolute top-0 left-0 w-[500px] h-[500px] transform rotate-180">
      <img
        src={hoverSvg.src}
        alt=""
        class="w-full h-full object-cover opacity-90"
      />
    </div>

    <div class="z-10 text-white p-16">
      <h1 class="text-6xl font-bold mb-0 tracking-tight">Spotify</h1>
      <h2 class="text-[8rem] leading-[1] font-extrabold tracking-tighter">
        Wrapped<br />2024
      </h2>
    </div>

    <div class="absolute bottom-0 right-0 w-[500px] h-[500px]">
      <img
        src={hoverSvg.src}
        alt=""
        class="w-full h-full object-cover opacity-90"
      />
    </div>
  </div>
</Layout>
